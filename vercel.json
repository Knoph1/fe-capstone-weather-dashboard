{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "weather-dashboard",
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "OPENWEATHER_API_KEY": "@openweather_api_key"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/forecast",
      "destination": "/api/forecast"
    }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(js|css|svg|png|jpg|jpeg|ico|woff2)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=1800, stale-while-revalidate=86400"
        }
      ]
    }
  ],
  "functions": {
    "api/**/*.{js,ts}": {
      "maxDuration": 10,
      "memory": 256
    }
  },
  "regions": ["fra1", "iad1"],
  "cleanUrls": true,
  "trailingSlash": false
}
